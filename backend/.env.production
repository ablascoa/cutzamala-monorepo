# Production environment configuration for Railway
# These will be set as environment variables in Railway dashboard

# Database - will be provided by Railway PostgreSQL plugin
DATABASE_URL=postgresql://user:password@host:port/database
USE_SQLITE=false

# API Configuration
# Update these URLs with your actual Vercel deployment URLs
CORS_ORIGINS=["https://your-cutzamala-dashboard.vercel.app", "https://cutzamala-dashboard.vercel.app"]
LOG_LEVEL=INFO
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_MINUTE=50
MAX_LIMIT=10000
DEFAULT_LIMIT=1000

# Railway will provide this automatically
PORT=8000